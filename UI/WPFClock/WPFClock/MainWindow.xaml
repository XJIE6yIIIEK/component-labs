<Window x:Class="WPFClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFClock"
        mc:Ignorable="d"
        Title="MainWindow" Height="220" Width="220"
		SizeChanged="window_SizeChanged">
	<Canvas x:Name="canvas" Margin="0,0,19,4">
		<Ellipse x:Name="outer" Width="200" Height="200" HorizontalAlignment="Stretch" Stroke="Black" StrokeThickness="4" />
		<Line x:Name="hourHand" X1="100" Y1="100" X2="100" Y2="50" Stroke="Black" StrokeThickness="4" />
		<Line x:Name="minuteHand" X1="100" Y1="100" X2="100" Y2="25" Stroke="Black" StrokeThickness="2" />
		<Line x:Name="secondHand" X1="100" Y1="100" X2="100" Y2="15" Stroke="Red" StrokeThickness="1" />
		<Ellipse x:Name="pin" Width="12" Height="12" Fill="Black" Canvas.Left="94" Canvas.Top="94" />
	</Canvas>
</Window>
